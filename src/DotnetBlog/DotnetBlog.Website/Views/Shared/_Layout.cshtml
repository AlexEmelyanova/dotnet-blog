@{
    var verion = DateTime.UtcNow.ToString("yyyyMMddHHmmss");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- css -->
    <link rel="stylesheet" href="/css/common.css?v=@(verion)" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>


    <main id="main" class="main-content content-width">
        @RenderBody()
    </main>

    <!-- js -->
    <script src="/js/common.js?v=@(verion)"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
